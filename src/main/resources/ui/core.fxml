<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="borderPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.istic.synthlab.ui.CoreController">
    <center>
        <ScrollPane fx:id="scrollpane">
            <AnchorPane fx:id="anchorPane" prefHeight="3000.0" prefWidth="3000.0" style="-fx-background-image: url('/ui/images/background.png')">

                <TitledPane fx:id="componantList" collapsible="true" text="Components" prefHeight="400" prefWidth="200">
                    <ScrollPane fitToHeight="true" fitToWidth="true">
                        <ListView fx:id="listView" editable="true" />
                    </ScrollPane>
                </TitledPane>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
            </AnchorPane>
        </ScrollPane>
    </center>
    <top>
        <VBox>
            <MenuBar>
                <Menu mnemonicParsing="false" text="File">
                    <MenuItem mnemonicParsing="false" onAction="#onActionClose" text="Close" />
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <MenuItem mnemonicParsing="false" text="Delete" />
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <MenuItem mnemonicParsing="false" text="About" />
                </Menu>
            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
                <Button fx:id="pauseButton" mnemonicParsing="false" onAction="#onPause" text="Pause" />
                <Button fx:id="playButton" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#onPlay" text="Play" />
            <Button mnemonicParsing="false" onAction="#onCut" text="Delete Cable" />
            </ToolBar>
        </VBox>
    </top>
    <bottom>
        <SplitPane dividerPositions="1.5" orientation="HORIZONTAL" prefHeight="130.0" BorderPane.alignment="CENTER">
            <TextArea fx:id="textarea" prefHeight="130.0" visible="true" />
        </SplitPane>
    </bottom>
</BorderPane>
