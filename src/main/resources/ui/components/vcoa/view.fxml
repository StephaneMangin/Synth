<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import org.istic.synthlab.ui.controls.Potentiometer?>
<AnchorPane fx:id="vcoaPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="300.0" styleClass="component" stylesheets="@../../stylesheets/components.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.istic.synthlab.components.vcoa.Controller">
    <children>
        <Label layoutX="35.0" layoutY="2.0" styleClass="title" text="VCOA">
            <font>
                <Font name="System" size="20.0" />
            </font>
        </Label>

        <Label layoutX="17.0" layoutY="140.0" text="FM"/>
        <ImageView fitHeight="25.0" fitWidth="25.0" layoutX="15.0" layoutY="160.0" pickOnBounds="true" preserveRatio="true"
                   onMouseClicked="#connectFm">
            <Image url="@../../images/blueSocket.png"/>
        </ImageView>

        <Label layoutX="190.0" layoutY="10.0" text="Exp. Freq." textAlignment="CENTER">
            <font>
               <Font size="10.0" />
            </font>
        </Label>
        <Label layoutX="190.0" layoutY="52.0" text="0" textAlignment="CENTER">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
        <Label layoutX="235.0" layoutY="52.0" text="10" textAlignment="CENTER">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
        <Potentiometer fx:id="expFrequency" layoutX="200.0" layoutY="30.0" />

        <Label layoutX="190.0" layoutY="70.0" text="Linear Freq." textAlignment="CENTER">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
        <Label layoutX="180.0" layoutY="110.0" text="-1.0" textAlignment="CENTER">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
        <Label layoutX="235.0" layoutY="110.0" text="1.0" textAlignment="CENTER">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
        <Potentiometer fx:id="linFrequency" layoutX="200.0" layoutY="90.0" />

        <Label layoutX="190.0" layoutY="130.0" text="Amplitude" textAlignment="CENTER">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
        <Label layoutX="180.0" layoutY="170.0" text="0.0" textAlignment="CENTER">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
        <Label layoutX="235.0" layoutY="170.0" text="1.0" textAlignment="CENTER">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
        <Potentiometer fx:id="amplitude" layoutX="200.0" layoutY="150.0"/>

        <Label layoutX="250.0" layoutY="140.0" text="Output">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
        <ImageView fx:id="output" fitHeight="25.0" fitWidth="25.0" layoutX="260.0" layoutY="160.0" pickOnBounds="true"
                   preserveRatio="true" onMouseClicked="#connectOutput">
            <Image url="@../../images/redSocket.png"/>
        </ImageView>

        <RadioButton fx:id="squareRadio" layoutX="15.0" layoutY="50.0" mnemonicParsing="false" text="Square"/>
        <RadioButton fx:id="sineRadio" layoutX="15.0" layoutY="80.0" mnemonicParsing="false" text="Sine"/>
        <RadioButton fx:id="triangleRadio" layoutX="15.0" layoutY="110.0" mnemonicParsing="false" text="Triangle"/>
        <ImageView fx:id="oscillatorImage" fitHeight="64.0" fitWidth="64.0" layoutX="100.0" layoutY="60.0"
                   pickOnBounds="true" preserveRatio="true"/>
        <Button fx:id="close" layoutX="5.0" layoutY="4.0" mnemonicParsing="false" onMouseClicked="#closeIt" prefHeight="25.0" prefWidth="25.0" />


        <Label layoutX="60.0" layoutY="160.0" text="Freq :" textAlignment="RIGHT">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <Label fx:id="currentFrequency" layoutX="120.0" layoutY="160.0" text="1.0" textAlignment="LEFT">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
