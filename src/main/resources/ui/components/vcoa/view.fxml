<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import org.istic.synthlab.ui.controls.Potentiometer?>
<AnchorPane fx:id="vcoaPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="230.0" prefWidth="350.0" styleClass="component" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.istic.synthlab.components.vcoa.Controller">
    <Label layoutX="35.0" layoutY="4.0" text="VCOA">
        <font>
            <Font name="System" size="20.0"/>
        </font>
    </Label>

    <ImageView fitHeight="25.0" fitWidth="25.0" layoutX="5.0" layoutY="5.0" pickOnBounds="true"
               preserveRatio="true" smooth="true" onMouseClicked="#close">
        <Image url="@../../images/closeIcon.png"/>
    </ImageView>

    <Label layoutX="17.0" layoutY="170.0" text="FM"/>
    <ImageView fitHeight="25.0" fitWidth="25.0" layoutX="15.0" layoutY="190.0" pickOnBounds="true" preserveRatio="true"
               onMouseClicked="#connectFm">
        <Image url="@../../images/blueSocket.png"/>
    </ImageView>

    <Label layoutX="200.0" layoutY="10.0" text="Exp Frequency" textAlignment="CENTER"/>
    <Potentiometer fx:id="expFrequency" layoutX="225.0" layoutY="30.0"/>

    <Label layoutX="200.0" layoutY="70.0" text="Lin Frequency" textAlignment="CENTER"/>
    <Potentiometer fx:id="linFrequency" layoutX="225.0" layoutY="90.0"/>

    <Label layoutX="205.0" layoutY="130.0" text="Amplitude" textAlignment="CENTER"/>
    <Potentiometer fx:id="amplitude" layoutX="225.0" layoutY="150.0"/>

    <Label layoutX="300.0" layoutY="170.0" text="Output"/>
    <ImageView fitHeight="25.0" fitWidth="25.0" layoutX="310.0" layoutY="190.0" pickOnBounds="true"
               preserveRatio="true" onMouseClicked="#connectOutput">
        <Image url="@../../images/redSocket.png"/>
    </ImageView>

    <RadioButton fx:id="squareRadio" layoutX="15.0" layoutY="50.0" mnemonicParsing="false" text="Square"/>
    <RadioButton fx:id="sineRadio" layoutX="15.0" layoutY="80.0" mnemonicParsing="false" text="Sine"/>
    <RadioButton fx:id="triangleRadio" layoutX="15.0" layoutY="110.0" mnemonicParsing="false" text="Triangle"/>
    <RadioButton fx:id="sawtoothRadio" layoutX="15.0" layoutY="140.0" mnemonicParsing="false" text="Sawtooth"/>
    <ImageView fx:id="oscillatorImage" fitHeight="64.0" fitWidth="64.0" layoutX="110.0" layoutY="70.0"
               pickOnBounds="true" preserveRatio="true"/>
</AnchorPane>
