<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import org.istic.synthlab.ui.controls.Potentiometer?>
<AnchorPane fx:id="egPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="200.0" prefWidth="380.0" styleClass="component" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.istic.synthlab.components.eg.Controller">

    <ImageView fitHeight="25.0" fitWidth="25.0" layoutX="5.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true" smooth="true" onMouseClicked="#close">
        <Image url="@../../images/closeIconMin.png"/>
    </ImageView>

    <Label layoutX="35.0" layoutY="4.0" styleClass="title" text="EG">
        <font>
            <Font name="System" size="20.0"/>
        </font>
    </Label>

    <Label layoutX="18.0" layoutY="70.0" text="Attack"/>
    <Potentiometer fx:id="attack" layoutX="22.0" layoutY="90.0"/>

    <Label layoutX="118.0" layoutY="70.0" text="Decay"/>
    <Potentiometer fx:id="decay" layoutX="122.0" layoutY="90.0"/>

    <Label layoutX="215.0" layoutY="70.0" text="Sustain"/>
    <Potentiometer fx:id="sustain" layoutX="222.0" layoutY="90.0"/>

    <Label layoutX="313.0" layoutY="70.0" text="Release"/>
    <Potentiometer fx:id="release" layoutX="322.0" layoutY="90.0"/>

    <Label layoutX="11.0" layoutY="140.0" text="Gate" />
    <ImageView fitHeight="25.0" fitWidth="25.0" layoutX="15.0" layoutY="160.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#connectGate">
        <Image url="@../../images/blueSocket.png"/>
    </ImageView>

    <Label layoutX="330.0" layoutY="140.0" text="Output" />
    <ImageView fitHeight="25.0" fitWidth="25.0" layoutX="340.0" layoutY="160.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#connectOutput">
        <Image url="@../../images/redSocket.png"/>
    </ImageView>
</AnchorPane>
